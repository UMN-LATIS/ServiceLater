{
    "id": "default0",
    "version": "1_0",
    "name": "My Default bundle",
    "comment": "My system's default bundle",
    "whitelisted_images": [
        {
          "name": "Whitelistphp",
          "registry": "docker.io",
          "repository": "php",
          "image": { "type": "tag", "value": "7.4-apache" }
        }
      ],
    "mappings": [
        {
          "name": "default", 
          "registry": "*",
          "repository": "*",
          "image": { "type": "tag", "value": "*" },
          "policy_ids": [ "policy1" ],
          "whitelist_ids": [ "whitelist1" ]
        }
      ],
    "whitelists": [
        {
          "id": "whitelist1",
          "name": "Simple Whitelist",
          "version": "1_0",
          "items": [
            { "id": "item1", "gate": "vulnerabilities", "trigger": "package", "trigger_id": "CVE-2003-1+*" }
          ]
        }
    ],
    "policies": [
      {
        "name": "DefaultPolicy",
        "version": "1_0",
        "comment": "Policy for basic checks",
        "id": "policy1",
        "rules": [
          {
            "action": "STOP",
            "gate": "vulnerabilities",
            "trigger": "package",
            "id": "rule1",
            "params": [
              { "name": "package_type", "value": "all" },
              { "name": "severity_comparison", "value": ">=" },
              { "name": "severity", "value": "medium" }
            ]
          }
        ]
      }
    ]
  }